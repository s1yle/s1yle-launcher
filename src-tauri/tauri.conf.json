{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "s1yle-launcher",
  "version": "0.1.2",
  "identifier": "art.s1yle.mclauncher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MC Launcher",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "theme": "Dark",
        "label": "main",
        "minWidth": 960,
        "minHeight": 600,
        "center": true,
        "focus": true,
        "visible": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "zoomHotkeysEnabled": false,
        "backgroundThrottling": "disabled"
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
  }
}
